<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="GamesApp.Presentation.Views.Pages.ViewPages.GamesStatisticsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entities="using:GamesApp.Domain.Entities"
    xmlns:local="using:GamesApp.Presentation.Views.Pages.ViewPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="20" Spacing="20">

            <TextBlock
                Margin="0,0,0,10"
                FontSize="24"
                FontWeight="Bold"
                Text="Game Statistics" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="20">
                <StackPanel Spacing="10">
                    <Border
                        Padding="10"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="8">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Game Types Count" />
                            <TextBlock Text="{x:Bind ViewModel.SingleplayerCountInformation}" />
                            <TextBlock Text="{x:Bind ViewModel.MultiplayerCountInformation}" />
                        </StackPanel>
                    </Border>

                    <Border
                        Padding="10"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="8">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Top-Selling Game (by genre)" />
                            <TextBlock Text="{x:Bind ViewModel.TopSellingGame, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Spacing="10">
                    <ComboBox
                        Header="Choose a genre"
                        ItemsSource="{x:Bind ViewModel.Genres, Mode=OneTime}"
                        SelectedItem="{x:Bind ViewModel.SelectedGenre, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="entities:Genre">
                                <TextBlock Text="{x:Bind Name}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Border
                        Padding="10"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="8">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Top 5 Games by Sales (Genre)" />
                            <ListView Height="150" ItemsSource="{x:Bind ViewModel.Top5MostSoldGames, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="entities:Game">
                                        <TextBlock Text="{x:Bind Name}" />
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>

                    <Border
                        Padding="10"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="8">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Bottom 5 Games by Sales (Genre)" />
                            <ListView Height="150" ItemsSource="{x:Bind ViewModel.Top5LeastSoldGames, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="entities:Game">
                                        <TextBlock Text="{x:Bind Name}" />
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- <Border
                Padding="10"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="8">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="Detailed Game Information" />
                    <TextBlock Text="{x:Bind ViewModel.SelectedGameInfo}" TextWrapping="Wrap" />
                </StackPanel>
            </Border>-->

        </StackPanel>
    </ScrollViewer>
</Page>
