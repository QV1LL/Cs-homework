<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="GamesApp.Presentation.Views.Pages.ManagePages.ManageGenresPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entities="using:GamesApp.Domain.Entities"
    xmlns:local="using:GamesApp.Presentation.Views.Pages.ManagePages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                Orientation="Vertical"
                Spacing="7">
                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="Manage genres" />
                <TextBox
                    Width="300"
                    HorizontalAlignment="Left"
                    PlaceholderText="Enter a name"
                    Text="{x:Bind ViewModel.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <InfoBar
                    Width="300"
                    HorizontalAlignment="Left"
                    IsClosable="True"
                    IsOpen="{x:Bind ViewModel.IsErrorVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Message="{x:Bind ViewModel.ErrorMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Severity="Error" />
            </StackPanel>
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="10">
                <Button
                    Command="{x:Bind ViewModel.AddCommand}"
                    Content="Add"
                    Style="{StaticResource AccentButtonStyle}" />
                <Button
                    Command="{x:Bind ViewModel.UpdateCommand}"
                    Content="Update"
                    Visibility="{x:Bind ViewModel.IsGenreSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <Button
                    Command="{x:Bind ViewModel.DeleteCommand}"
                    Content="Delete"
                    Visibility="{x:Bind ViewModel.IsGenreSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>
        </Grid>

        <ListView
            Grid.Row="1"
            Margin="0,20,0,0"
            ItemsSource="{x:Bind ViewModel.Genres, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{x:Bind ViewModel.SelectedGenre, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            FontWeight="Bold"
                            Text="Name" />
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="entities:Genre">
                    <Grid ColumnSpacing="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{x:Bind Name}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
