<Window
    x:Class="TextAnalizer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TextAnalizer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Text Analyzer"
    Width="800"
    Height="600"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Label for input text  -->
        <Label
            Grid.Row="0"
            Content="Введіть текст для аналізу:"
            FontWeight="Bold" />

        <!--  TextBox for input text  -->
        <TextBox
            x:Name="InputTextBox"
            Grid.Row="1"
            Margin="0,5,0,10"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />

        <!--  Output choice  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,0,0,10"
            Orientation="Horizontal">
            <Label
                VerticalAlignment="Center"
                Content="Вивести звіт:"
                FontWeight="Bold" />
            <RadioButton
                x:Name="DisplayOnScreenRadio"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Content="На екрані"
                IsChecked="True" />
            <RadioButton
                x:Name="SaveToFileRadio"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Content="У файл" />
            <TextBox
                x:Name="FilePathTextBox"
                Width="300"
                Margin="10,0,0,0"
                IsEnabled="{Binding ElementName=SaveToFileRadio, Path=IsChecked}"
                ToolTip="Шлях до файлу (наприклад, C:\report.txt)" />
            <Button
                x:Name="BrowseFileButton"
                Margin="10,0,0,0"
                Click="BrowseFileButton_Click"
                Content="Обрати файл"
                IsEnabled="{Binding ElementName=SaveToFileRadio, Path=IsChecked}" />
        </StackPanel>

        <!--  Buttons for actions  -->
        <StackPanel
            Grid.Row="3"
            Margin="0,0,0,10"
            Orientation="Horizontal">
            <Button
                x:Name="AnalyzeButton"
                Width="100"
                Click="AnalyzeButton_Click"
                Content="Аналізувати" />
            <Button
                x:Name="StopButton"
                Width="100"
                Margin="10,0,0,0"
                Click="StopButton_Click"
                Content="Зупинити"
                IsEnabled="False" />
            <Button
                x:Name="RestartButton"
                Width="100"
                Margin="10,0,0,0"
                Click="RestartButton_Click"
                Content="Перезапустити"
                IsEnabled="False" />
        </StackPanel>

        <!--  Progress indicator  -->
        <ProgressBar
            x:Name="ProgressBar"
            Grid.Row="4"
            Height="20"
            Margin="0,0,0,10"
            IsIndeterminate="True"
            Visibility="Collapsed" />

        <!--  Report display area  -->
        <Label
            Grid.Row="4"
            Content="Звіт:"
            FontWeight="Bold"
            Visibility="{Binding ElementName=DisplayOnScreenRadio, Path=IsChecked}" />
        <TextBox
            x:Name="ReportTextBox"
            Grid.Row="5"
            IsReadOnly="True"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto"
            Visibility="{Binding ElementName=DisplayOnScreenRadio, Path=IsChecked}" />
    </Grid>
</Window>
