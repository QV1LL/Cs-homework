<Window
    x:Class="ThreeSpecimentsApplication.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ThreeSpecimentsApplication"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Popup
            x:Name="InfoPopup"
            AllowsTransparency="True"
            PopupAnimation="Fade"
            StaysOpen="False">
            <Border
                Padding="20"
                Background="LightPink"
                BorderBrush="DarkRed"
                BorderThickness="2"
                CornerRadius="6">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="DarkRed"
                        Text="Another instance is already running!"
                        TextAlignment="Center" />
                    <Button
                        Width="80"
                        HorizontalAlignment="Center"
                        Click="ClosePopup_Click"
                        Content="OK" />
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>
