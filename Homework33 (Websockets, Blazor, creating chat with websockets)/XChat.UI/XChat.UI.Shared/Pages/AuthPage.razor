@page "/"
@using System.ComponentModel.DataAnnotations
@using XChat.UI.Shared.Dto.User
@using XChat.UI.Shared.Services
@inject AuthService AuthService
@inject NavigationManager NavigationManager

<PageTitle>XChat — Authentication</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="mode-toggle">
            <button type="button" class="toggle-btn @(isLogin ? "active" : "")" @onclick="() => ToggleMode(true)">Sign In</button>
            <button type="button" class="toggle-btn @(isLogin ? "" : "active")" @onclick="() => ToggleMode(false)">Sign Up</button>
        </div>

        <div class="login-header">
            <h1>@(isLogin ? "Welcome back!" : "Join XChat")</h1>
            <p>@(isLogin ? "Sign in to start chatting" : "Create your account")</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">@errorMessage</div>
        }

        <EditForm Model="@authModel" OnValidSubmit="@HandleSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label for="username">Username</label>
                <InputText id="username" @bind-Value="authModel.Name" class="form-control" placeholder="Enter your username" />
                <ValidationMessage For="@(() => authModel.Name)" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <InputText id="password" type="password" @bind-Value="authModel.Password" class="form-control" placeholder="Enter your password" />
                <ValidationMessage For="@(() => authModel.Password)" />
            </div>

            <button type="submit" class="btn-login" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    <span>@(isLogin ? "Signing in..." : "Creating account...")</span>
                }
                else
                {
                    <span>@(isLogin ? "Sign In" : "Sign Up")</span>
                }
            </button>

        </EditForm>

        <div class="login-footer">
            @if (isLogin)
            {
                <p>Forgot your password? (It`s your fault -_-)</p>
            }
            else
            {
                <p>
                    Already have an account?
                    <button type="button" class="link-btn" @onclick="() => ToggleMode(true)">Sign In</button>
                </p>
            }
        </div>
    </div>
</div>

@code {
    private AuthModel authModel = new();
    private bool isLogin = true;
    private bool isLoading = false;
    private string? errorMessage;

    private void ToggleMode(bool loginMode)
    {
        isLogin = loginMode;
        authModel = new AuthModel();
        errorMessage = null;
        StateHasChanged();
    }

    private async Task HandleSubmit()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var request = new AuthRequest(authModel.Name, authModel.Password);

            AuthResponse? result = isLogin
                ? await AuthService.LoginAsync(request)
                : await AuthService.RegisterAsync(request);

            UserStateService.Username = result?.Name;
            UserStateService.UserId = result?.Id;

            if (result != null)
            {
                NavigationManager.NavigateTo($"/chat");
            }
            else
            {
                errorMessage = isLogin
                    ? "Invalid username or password."
                    : "Registration failed. Username may already exist.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    public class AuthModel
    {
        [Required(ErrorMessage = "Username is required")]
        [MinLength(3, ErrorMessage = "Username must be at least 3 characters")]
        public string Name { get; set; } = string.Empty;

        [Required(ErrorMessage = "Password is required")]
        [MinLength(6, ErrorMessage = "Password must be at least 6 characters")]
        public string Password { get; set; } = string.Empty;

        public bool RememberMe { get; set; }
    }
}
