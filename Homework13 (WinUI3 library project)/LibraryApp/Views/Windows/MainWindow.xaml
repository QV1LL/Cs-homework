<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="LibraryApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LibraryApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:LibraryApp.ViewModels.WindowViewModels"
    Title="Бібліотека"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt" />
    </Window.SystemBackdrop>

    <NavigationView
        x:Name="MainWindowNavigationView"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
        ExpandedModeThresholdWidth="500"
        IsBackButtonVisible="Collapsed"
        IsBackEnabled="False"
        IsPaneOpen="False"
        IsSettingsVisible="True"
        IsTabStop="False"
        PaneDisplayMode="Left"
        PaneTitle="Меню навігації"
        SelectionChanged="MainWindowNavigationView_SelectionChanged"
        SelectionFollowsFocus="Disabled">
        <NavigationView.MenuItems>
            <NavigationViewItem
                Content="Всі книги"
                SelectsOnInvoked="True"
                Tag="AllBooks">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Книги за жанрами" Tag="BooksByGenre">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Вибрані книги" Tag="FavoriteBooks">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>
        <Frame x:Name="ContentFrame" />
    </NavigationView>
</Window>
