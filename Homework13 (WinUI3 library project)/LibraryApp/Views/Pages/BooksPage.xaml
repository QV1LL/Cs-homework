<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="LibraryApp.Views.Pages.BooksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:LibraryApp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:itemsView="using:Microsoft.UI.Xaml.Controls"
    xmlns:local="using:LibraryApp.ViewModels.PageViewModels"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Margin="0,0,0,10"
            Orientation="Horizontal"
            Spacing="10">
            <ComboBox
                x:Name="GenreFilter"
                Width="200"
                ItemsSource="{Binding Genres, Mode=OneWay}"
                PlaceholderText="All Genres"
                SelectedItem="{Binding SelectedGenre, Mode=TwoWay}" />
            <TextBox
                x:Name="SearchBox"
                Width="200"
                PlaceholderText="Search by title or author..."
                Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Width="150"
                Command="{Binding ToggleLayoutCommand}"
                Content="{Binding LayoutToggleButtonText, Mode=OneWay}" />
        </StackPanel>

        <ItemsView
            x:Name="BooksView"
            Grid.Row="1"
            ItemsSource="{Binding FilteredBooks, Mode=OneWay}"
            Layout="{Binding CurrentLayout, Mode=OneWay}">
            <ItemsView.ItemTemplate>
                <DataTemplate x:DataType="local:BookViewModel">
                    <ItemContainer>
                        <StackPanel Margin="10">
                            <Image
                                Height="150"
                                Source="{x:Bind CoverImage, Mode=OneWay}"
                                Stretch="UniformToFill" />
                            <TextBlock
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                Text="{x:Bind Title, Mode=OneWay}"
                                TextWrapping="Wrap" />
                            <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Text="{x:Bind Author, Mode=OneWay}" />
                            <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Text="{x:Bind Genre, Mode=OneWay}" />
                            <FontIcon Glyph="îœ´" Visibility="{x:Bind IsFavorite, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </StackPanel>
                    </ItemContainer>
                </DataTemplate>
            </ItemsView.ItemTemplate>
        </ItemsView>
    </Grid>
</Page>