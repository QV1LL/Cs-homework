<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="GeologicalFindingAccountingApp.Presentation.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="using:WinUI3Localizer"
    xmlns:local="using:GeologicalFindingAccountingApp.Presentation.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Padding="20" Spacing="10">
        <TextBlock x:Uid="TextBlockTheme" FontSize="24" />
        <ComboBox
            x:Name="ThemeComboBox"
            Width="200"
            SelectionChanged="ThemeComboBox_SelectionChanged">
            <ComboBoxItem x:Uid="ComboBoxItemDefault" Tag="Default" />
            <ComboBoxItem x:Uid="ComboBoxItemLight" Tag="Light" />
            <ComboBoxItem x:Uid="ComboBoxItemDark" Tag="Dark" />
        </ComboBox>

        <TextBlock x:Uid="TextBlockLanguage" FontSize="24" />
        <ComboBox
            x:Name="LanguageComboBox"
            Width="200"
            SelectionChanged="LanguageComboBox_SelectionChanged">
            <ComboBoxItem x:Uid="ComboBoxItemEnglish" Tag="en-US" />
            <ComboBoxItem x:Uid="ComboBoxItemUkrainian" Tag="uk" />
        </ComboBox>
    </StackPanel>
</Page>