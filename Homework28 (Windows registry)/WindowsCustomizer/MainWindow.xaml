<Window
    x:Class="WindowsCustomizer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WindowsCustomizer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Windows Customizer"
    Width="800"
    Height="600"
    mc:Ignorable="d">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Click="Appearance_Click" Header="Appearance and Personalization" />
            <MenuItem Click="Performance_Click" Header="Performance and Speed Tweaks" />
            <MenuItem Click="Colors_Click" Header="Menu Colors" />
        </Menu>

        <ContentControl x:Name="ContentArea" />
    </DockPanel>
</Window>