<UserControl
    x:Class="WindowsCustomizer.Controls.ColorsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WindowsCustomizer.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Margin="20">
        <TextBlock
            FontSize="24"
            FontWeight="Bold"
            Text="Menu Colors" />

        <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
            <TextBlock
                Width="100"
                VerticalAlignment="Center"
                Text="Menu:" />
            <xctk:ColorPicker
                x:Name="MenuColorPicker"
                Width="200"
                Margin="10,0,0,0"
                SelectedColorChanged="MenuColorPicker_SelectedColorChanged"
                UsingAlphaChannel="False" />
        </StackPanel>

        <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
            <TextBlock
                Width="100"
                VerticalAlignment="Center"
                Text="MenuText:" />
            <xctk:ColorPicker
                x:Name="MenuTextColorPicker"
                Width="200"
                Margin="10,0,0,0"
                SelectedColorChanged="MenuTextColorPicker_SelectedColorChanged"
                UsingAlphaChannel="False" />
        </StackPanel>

        <Button
            Width="100"
            Margin="0,20,0,0"
            HorizontalAlignment="Left"
            Click="Save_Click"
            Content="Save"
            FontSize="14" />
    </StackPanel>
</UserControl>
