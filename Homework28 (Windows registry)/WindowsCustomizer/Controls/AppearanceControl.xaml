<UserControl
    x:Class="WindowsCustomizer.Controls.AppearanceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WindowsCustomizer.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Margin="20">
        <TextBlock
            Margin="0,0,0,10"
            FontSize="24"
            FontWeight="Bold"
            Text="Appearance and Personalization" />

        <CheckBox x:Name="ShowAccentColor" Content="Show Accent Color on Taskbar" />
        <CheckBox x:Name="EnableTransparency" Content="Enable Transparency" />

        <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="Icon Size:" />
            <TextBox
                x:Name="IconSizeBox"
                Width="50"
                Margin="10,0,0,0" />
        </StackPanel>

        <Button
            Width="100"
            Margin="0,20,0,0"
            HorizontalAlignment="Left"
            Click="Save_Click"
            Content="Save"
            FontSize="14" />
    </StackPanel>
</UserControl>
