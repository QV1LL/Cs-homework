<UserControl
    x:Class="WindowsCustomizer.Controls.PerformanceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WindowsCustomizer.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Margin="20">
        <TextBlock
            FontSize="24"
            FontWeight="Bold"
            Text="Performance and Speed Tweaks" />

        <StackPanel Margin="0,10,0,0">
            <TextBlock Text="Menu Show Delay (ms):" />
            <StackPanel Orientation="Horizontal">
                <Slider
                    x:Name="MenuDelaySlider"
                    Width="200"
                    IsSnapToTickEnabled="True"
                    Maximum="1000"
                    Minimum="0"
                    TickFrequency="50"
                    ValueChanged="MenuDelaySlider_ValueChanged" />
                <TextBlock
                    x:Name="MenuDelayValue"
                    Width="50"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center" />
            </StackPanel>
        </StackPanel>

        <CheckBox
            x:Name="DisableThumbnails"
            Margin="0,20,0,0"
            Content="Disable Thumbnail Cache" />

        <Button
            Width="100"
            Margin="0,20,0,0"
            HorizontalAlignment="Left"
            Click="Save_Click"
            Content="Save"
            FontSize="14" />
    </StackPanel>
</UserControl>