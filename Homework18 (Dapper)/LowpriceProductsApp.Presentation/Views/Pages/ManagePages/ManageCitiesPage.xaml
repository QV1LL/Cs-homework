<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="LowpriceProductsApp.Presentation.Views.Pages.ManagePages.ManageCitiesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entities="using:LowpriceProductsApp.Domain.Entities"
    xmlns:local="using:LowpriceProductsApp.Presentation.Views.Pages.ManagePages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                Orientation="Vertical"
                Spacing="7">
                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="Manage cities" />
                <TextBox
                    Width="300"
                    HorizontalAlignment="Left"
                    PlaceholderText="Enter a name"
                    Text="{x:Bind ViewModel.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <ComboBox
                    Width="300"
                    ItemsSource="{x:Bind ViewModel.Countries, Mode=OneTime}"
                    PlaceholderText="Select country"
                    SelectedItem="{x:Bind ViewModel.Country, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="entities:Country">
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="{x:Bind Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <InfoBar
                    Width="300"
                    HorizontalAlignment="Left"
                    IsClosable="True"
                    IsOpen="{x:Bind ViewModel.IsErrorVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Message="{x:Bind ViewModel.ErrorMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Severity="Error" />
            </StackPanel>
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="10">
                <Button
                    Command="{x:Bind ViewModel.AddCommand}"
                    Content="Add"
                    Style="{StaticResource AccentButtonStyle}" />
                <Button
                    Command="{x:Bind ViewModel.UpdateCommand}"
                    Content="Update"
                    Visibility="{x:Bind ViewModel.IsCitySelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <Button
                    Command="{x:Bind ViewModel.DeleteCommand}"
                    Content="Delete"
                    Visibility="{x:Bind ViewModel.IsCitySelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>
        </Grid>

        <ListView
            Grid.Row="1"
            Margin="0,20,0,0"
            ItemsSource="{x:Bind ViewModel.Cities, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{x:Bind ViewModel.SelectedCity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            FontWeight="Bold"
                            Text="Id" />
                        <TextBlock
                            Grid.Column="1"
                            FontWeight="Bold"
                            Text="Name" />
                        <TextBlock
                            Grid.Column="2"
                            FontWeight="Bold"
                            Text="Country" />
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="entities:City">
                    <Grid ColumnSpacing="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{x:Bind Id}" />
                        <TextBlock Grid.Column="1" Text="{x:Bind Name}" />
                        <TextBlock Grid.Column="2" Text="{x:Bind Country.Name}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>