<Window
    x:Class="MicroImageBoard.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MicroImageBoard.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:MicroImageBoard.ViewModels"
    Title="MicroBrowser"
    Width="900"
    Height="600"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
            <TextBox
                Width="400"
                FontSize="14"
                Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Width="100"
                Margin="10,0,0,0"
                Command="{Binding SearchCommand}"
                Content="Search" />
        </StackPanel>

        <ItemsControl
            Grid.Row="1"
            Margin="0,0,0,10"
            ItemsSource="{Binding SearchSystems}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Width="100"
                            VerticalAlignment="Center"
                            Text="{Binding Name}" />
                        <CheckBox
                            Margin="5,0"
                            Content="Enabled"
                            IsChecked="{Binding IsEnabled, Mode=TwoWay}" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TabControl
            Grid.Row="2"
            ItemsSource="{Binding ImageResultsPerSystem}"
            SelectedItem="{Binding SelectedImageSystemResults}">

            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding System.Name}" />
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Results}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="5"
                                        BorderBrush="#444"
                                        BorderThickness="1"
                                        CornerRadius="6">
                                        <Image
                                            Width="150"
                                            Height="150"
                                            Cursor="Hand"
                                            Source="{Binding}"
                                            Stretch="UniformToFill">
                                            <Image.InputBindings>
                                                <MouseBinding
                                                    Command="{Binding DataContext.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    MouseAction="LeftClick" />
                                            </Image.InputBindings>
                                        </Image>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <Grid
            Grid.RowSpan="3"
            Background="#80000000"
            Visibility="{Binding IsSearching, Converter={StaticResource BoolToVisibilityConverter}}">

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#222">

                <Grid Width="80" Height="80">
                    <Ellipse
                        Width="80"
                        Height="80"
                        Opacity="0.3"
                        Stroke="#444"
                        StrokeThickness="6" />

                    <Ellipse
                        Width="80"
                        Height="80"
                        RenderTransformOrigin="0.5,0.5"
                        Stroke="LightSkyBlue"
                        StrokeDashArray="2 8"
                        StrokeThickness="6">
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotate" />
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation
                                            RepeatBehavior="Forever"
                                            Storyboard.TargetName="SpinnerRotate"
                                            Storyboard.TargetProperty="Angle"
                                            From="0"
                                            To="360"
                                            Duration="0:0:1.0" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Grid>

                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Foreground="White"
                    Text="Searching..." />
            </StackPanel>
        </Grid>

    </Grid>
</Window>
