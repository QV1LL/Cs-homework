<Window
    x:Class="DancingProgressBars.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Dancing Progress bars"
    Width="800"
    Height="450">
    <DockPanel Margin="10">
        <StackPanel
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <Button
                x:Name="AddButton"
                Width="100"
                Margin="5"
                Click="AddButton_Click"
                Content="Додати" />
            <Button
                x:Name="RemoveButton"
                Width="100"
                Margin="5"
                Click="RemoveButton_Click"
                Content="Видалити" />
            <Button
                x:Name="ClearButton"
                Width="100"
                Margin="5"
                Click="ClearButton_Click"
                Content="Очистити" />
            <Button
                x:Name="RunButton"
                Width="100"
                Margin="5"
                Click="RunButton_Click"
                Content="Запустити" />
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ProgressBarsPanel" />
        </ScrollViewer>
    </DockPanel>
</Window>
